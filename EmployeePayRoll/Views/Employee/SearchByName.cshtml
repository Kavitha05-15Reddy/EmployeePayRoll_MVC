@model CommonLayer.Models.Employee

@{
    ViewData["Title"] = "Search By Name";
}

<h1>Search By Name</h1>

<div class="row d-flex justify-content-center">
    <div class="col-md-8">
        <form asp-action="SearchByName">
            <div class="form-group m-3">
                <div class="d-flex flex-row">
                    <label asp-for="Name" class="control-label" style="margin-right:30px;margin-left:4px"></label>
                    <input asp-for="Name" class="form-control" style="margin-left:30px; margin-right:5px;" placeholder="Enter your name" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-3" style="text-align:end;">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>