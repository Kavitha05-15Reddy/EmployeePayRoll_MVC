@model CommonLayer.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Employee Details</h1>

@* <h4>Employee</h4>
<hr /> *@
<div class="row d-flex justify-content-center">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @* <label asp-for="EmployeeId" class="control-label"></label> *@
                <input asp-for="EmployeeId" class="form-control" type="hidden" readonly/>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <div class="d-flex flex-row">
                    <label asp-for="Name" class="control-label" style="margin-right:30px;margin-left:4px"></label>
                    <input asp-for="Name" class="form-control" style="margin-left:30px; margin-right:5px;"/>
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <div class="d-flex flex-row">
                    <label asp-for="ProfileImage" class="control-label" style="margin-right:20px;margin-top:20px;margin-left:2px"></label>
                    @* <input asp-for="ProfileImage" class="form-control" /> *@
                    @Html.RadioButtonFor(x => x.ProfileImage, Url.Content("~/assets/rollimg1.png"))
                    <img src="~/assets/rollimg1.png" class="img  p-3" />
                    @Html.RadioButtonFor(x => x.ProfileImage, Url.Content("~/assets/rollimg2.png"))
                    <img src="~/assets/rollimg2.png" class="img  p-3" />
                    @Html.RadioButtonFor(x => x.ProfileImage, Url.Content("~/assets/rollimg3.png"))
                    <img src="~/assets/rollimg3.png" class="img  p-3" />
                    @Html.RadioButtonFor(x => x.ProfileImage, Url.Content("~/assets/rollimg4.png"))
                    <img src="~/assets/rollimg4.png" class="img  p-3" />
                </div>
                <span asp-validation-for="ProfileImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="d-flex flex-row">
                    <label asp-for="Gender" class="control-label" style="margin-right:60px;margin-left:15px;"></label>
                    @* <input asp-for="Gender" class="form-control" /> *@
                    <div class="ml-4">
                        <div class="d-flex flex-row">
                            <div class="ml-2 mr-2" style="margin-right:50px;">
                                @Html.RadioButtonFor(model => model.Gender, "Male")
                                Male
                            </div>
                            <div clas="ml-3 mr-2">
                                @Html.RadioButtonFor(model => model.Gender, "Female")
                                Female
                            </div>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <div class="d-flex">
                    <label asp-for="Department" class="control-label" style="margin-right:30px;"></label>
                    @* <input asp-for="Department" class="form-control" /> *@
                    @{

                        IEnumerable<string> strList = new List<string> { "HR", "IT", "Finance", "Engineer", "Others" };

                    }

                    @Html.DropDownList("Department", new SelectList(strList, strList.FirstOrDefault()), "--Select Course----")
                </div>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <div class="d-flex">
                    <label asp-for="Salary" class="control-label" style="margin-right:50px"></label>
                    <input type="text" asp-for="Salary" class="form-control" style="margin-left:20px" placeholder="Enter your salary" />
                </div>
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <div class="d-flex">
                    <label asp-for="StartDate" class="control-label" style="margin-right:46px"></label>
                    <input asp-for="StartDate" class="form-control" />
                </div>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <div class="d-flex">
                    <label asp-for="Notes" class="control-label" style="margin-right:50px;"></label>
                    @* <input asp-for="Notes" class="form-control" /> *@
                    <textarea asp-for="Notes" class="form-control" id="IdAdd" style="margin-left:20px;"></textarea>
                </div>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group m-3" style="text-align:end;">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
