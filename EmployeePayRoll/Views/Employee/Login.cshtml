@model CommonLayer.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

@* <h4>LoginModel</h4>
<hr /> *@
<div class="row d-flex justify-content-center">
    <div class="col-md-8">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-3">
                <div class="d-flex flex-row">
                    <label asp-for="EmployeeId" class="control-label" style="margin-right:25px;margin-left:150px;margin-top:5px"></label>
                    <input asp-for="EmployeeId" type="text" class="form-control ml-5" style="margin-left:30px; margin-right:-10px;" placeholder="Enter your Id" />
                </div>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <div class="d-flex flex-row">
                    <label asp-for="Name" class="control-label" style="margin-right:25px;margin-left:150px;margin-top:5px"></label>
                    <input asp-for="Name" class="form-control ml-5" style="margin-left:70px; margin-right:-10px;" placeholder="Enter your name" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-3" style="text-align:center;padding-top:20px">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
